<?xml version="1.0" encoding="utf-8"?>
<mujoco model="6-DOF Robotic Arm">
  <!-- 编译器选项 -->
  <compiler angle="radian" inertiafromgeom="true"/>
  
  <!-- 默认设置 -->
  <default>
    <!-- 关节默认设置 -->
    <joint limited="true" damping="0.1" armature="0.01"/>
    
    <!-- 几何体默认设置 -->
    <geom contype="0" conaffinity="0" condim="3" friction="1 0.005 0.0001" rgba="0.8 0.6 0.4 1"/>
    
    <!-- 电机默认设置 -->
    <motor ctrlrange="-2.0 2.0" ctrllimited="true"/>
    
    <!-- 站点默认设置 -->
    <site rgba="1 0 0 1" size="0.01"/>
  </default>
  
  <!-- 选项 -->
  <option timestep="0.01" gravity="0 0 -9.81" iterations="50" integrator="RK4" cone="elliptic"/>
  
  <!-- 资源 -->
  <asset>
    <!-- 材质 -->
    <material name="metal" rgba="0.7 0.7 0.7 1" specular="1" shininess="0.5"/>
    <material name="joint" rgba="0.3 0.5 0.8 1" specular="0.5" shininess="0.1"/>
    <material name="link" rgba="0.8 0.2 0.2 1" specular="0.5" shininess="0.1"/>
    <material name="gripper" rgba="0.2 0.8 0.2 1" specular="0.5" shininess="0.1"/>
    <material name="ground" rgba="0.9 0.9 0.9 1"/>
    
    <!-- 纹理 -->
    <texture name="skybox" type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0.1 0.1 0.1" width="512" height="512"/>
    <texture name="plane" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="300" height="300"/>
    
    <!-- 网格 -->
    <!-- Removed mesh reference as the file doesn't exist -->
  </asset>
  
  <!-- 世界体 -->
  <worldbody>
    <!-- 光照 -->
    <light directional="true" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3" pos="0 0 4" dir="0 0 -1"/>
    <light pos="2 2 3" dir="-0.5 -0.5 -1" diffuse="0.5 0.5 0.5"/>
    
    <!-- 地面 -->
    <geom name="ground" type="plane" size="2 2 0.1" material="ground" pos="0 0 -0.1"/>
    
    <!-- 基座 -->
    <body name="base" pos="0 0 0">
      <geom name="base_geom" type="cylinder" size="0.15 0.1" pos="0 0 0.1" material="metal"/>
      <geom name="base_geom2" type="cylinder" size="0.1 0.2" pos="0 0 0.2" material="metal"/>
      
      <!-- 关节1 - 旋转基座 -->
      <body name="link1" pos="0 0 0.25">
        <joint name="joint1" type="hinge" pos="0 0 0" axis="0 0 1" range="-180 180" damping="0.5"/>
        <geom name="link1_geom" type="cylinder" size="0.08 0.2" pos="0 0 0.1" material="link"/>
        
        <!-- 关节2 - 肩关节 -->
        <body name="link2" pos="0 0 0.3">
          <joint name="joint2" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90" damping="0.5"/>
          <geom name="link2_geom" type="capsule" size="0.06" fromto="0 0 0 0 0 0.4" material="link"/>
          <geom name="joint2_geom" type="sphere" size="0.1" pos="0 0 0" material="joint"/>
          
          <!-- 关节3 - 肘关节 -->
          <body name="link3" pos="0 0 0.4">
            <joint name="joint3" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90" damping="0.5"/>
            <geom name="link3_geom" type="capsule" size="0.06" fromto="0 0 0 0 0 0.4" material="link"/>
            <geom name="joint3_geom" type="sphere" size="0.1" pos="0 0 0" material="joint"/>
            
            <!-- 关节4 - 手腕1 -->
            <body name="link4" pos="0 0 0.4">
              <joint name="joint4" type="hinge" pos="0 0 0" axis="1 0 0" range="-180 180" damping="0.5"/>
              <geom name="link4_geom" type="capsule" size="0.05" fromto="0 0 0 0 0 0.15" material="link"/>
              <geom name="joint4_geom" type="sphere" size="0.08" pos="0 0 0" material="joint"/>
              
              <!-- 关节5 - 手腕2 -->
              <body name="link5" pos="0 0 0.15">
                <joint name="joint5" type="hinge" pos="0 0 0" axis="0 1 0" range="-90 90" damping="0.5"/>
                <geom name="link5_geom" type="capsule" size="0.04" fromto="0 0 0 0 0 0.1" material="link"/>
                <geom name="joint5_geom" type="sphere" size="0.06" pos="0 0 0" material="joint"/>
                
                <!-- 关节6 - 手腕3 -->
                <body name="link6" pos="0 0 0.1">
                  <joint name="joint6" type="hinge" pos="0 0 0" axis="1 0 0" range="-180 180" damping="0.5"/>
                  <geom name="link6_geom" type="capsule" size="0.04" fromto="0 0 0 0 0 0.08" material="link"/>
                  <geom name="joint6_geom" type="sphere" size="0.06" pos="0 0 0" material="joint"/>
                  
                  <!-- 末端执行器（夹爪基座） -->
                  <body name="gripper_base" pos="0 0 0.08">
                    <geom name="gripper_base_geom" type="box" size="0.05 0.05 0.03" material="gripper"/>
                    
                    <!-- 左侧夹爪 -->
                    <body name="left_gripper" pos="-0.05 0 0">
                      <joint name="left_gripper_joint" type="slide" axis="1 0 0" range="-0.02 0.05" damping="0.1"/>
                      <geom name="left_gripper_geom" type="box" size="0.02 0.02 0.06" pos="0 0 0" material="gripper"/>
                    </body>
                    
                    <!-- 右侧夹爪 -->
                    <body name="right_gripper" pos="0.05 0 0">
                      <joint name="right_gripper_joint" type="slide" axis="-1 0 0" range="-0.02 0.05" damping="0.1"/>
                      <geom name="right_gripper_geom" type="box" size="0.02 0.02 0.06" pos="0 0 0" material="gripper"/>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
    
    <!-- 相机 -->
    <camera name="fixed" pos="2 2 1" xyaxes="1 0 0 0 1 0" mode="fixed"/>
    <camera name="tracking" pos="0 -2 1" xyaxes="1 0 0 0 0 1" mode="trackcom"/>
    <camera name="side" pos="-1.5 0 0.5" xyaxes="0 -1 0 0 0 1" mode="fixed"/>
  </worldbody>
  
  <!-- 执行器 -->
  <actuator>
    <!-- 6个关节电机 -->
    <motor name="motor_joint1" joint="joint1" gear="50" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    <motor name="motor_joint2" joint="joint2" gear="50" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    <motor name="motor_joint3" joint="joint3" gear="50" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    <motor name="motor_joint4" joint="joint4" gear="30" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    <motor name="motor_joint5" joint="joint5" gear="30" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    <motor name="motor_joint6" joint="joint6" gear="30" ctrlrange="-2.0 2.0" ctrllimited="true"/>
    
    <!-- 夹爪电机 -->
    <motor name="gripper_motor" joint="left_gripper_joint" gear="10" ctrlrange="-0.02 0.05" ctrllimited="true"/>
    <motor name="gripper_motor2" joint="right_gripper_joint" gear="10" ctrlrange="-0.02 0.05" ctrllimited="true"/>
  </actuator>
  
  <!-- 传感器 -->
  <sensor>
    <!-- 关节位置传感器 -->
    <jointpos name="joint1_pos" joint="joint1"/>
    <jointpos name="joint2_pos" joint="joint2"/>
    <jointpos name="joint3_pos" joint="joint3"/>
    <jointpos name="joint4_pos" joint="joint4"/>
    <jointpos name="joint5_pos" joint="joint5"/>
    <jointpos name="joint6_pos" joint="joint6"/>
    
    <!-- 关节速度传感器 -->
    <jointvel name="joint1_vel" joint="joint1"/>
    <jointvel name="joint2_vel" joint="joint2"/>
    <jointvel name="joint3_vel" joint="joint3"/>
    
    <!-- 末端执行器位置 -->
    <framepos name="gripper_pos" objtype="body" objname="gripper_base"/>
  </sensor>
</mujoco>